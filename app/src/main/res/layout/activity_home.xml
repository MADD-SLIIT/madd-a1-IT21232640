<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-24dp">


    <SearchView
        android:id="@+id/homeSearch"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/custom_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homecurrentloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Current location"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeSearch" />

    <TextView
        android:id="@+id/homeCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Malabe, Sri Lanka"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/homecurrentloText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#067116"
        android:src="@drawable/ic_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homecurrentloText"
        app:tint="#067116" />

    <ImageView
        android:id="@+id/homeNotification"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toEndOf="@+id/homeCurrentLocation"
        app:layout_constraintTop_toBottomOf="@+id/homeSearch"
        app:tint="#067116" />

    <TextView
        android:id="@+id/nearLoSeeAllText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="See all"
        android:textColor="#067116"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apartButtonHome" />

    <TextView
        android:id="@+id/nearLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Near Location"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/nearLoSeeAllText"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelButtonHome" />

    <Button
        android:id="@+id/hotelButtonHome"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button"
        android:text="Hotel"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/homestayButtonHome"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeCurrentLocation" />

    <Button
        android:id="@+id/homestayButtonHome"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button2"
        android:text="Homestay"
        android:textColor="#939393"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeCurrentLocation" />

    <Button
        android:id="@+id/apartButtonHome"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button2"
        android:text="Apart"
        android:textColor="#939393"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/homestayButtonHome"
        app:layout_constraintTop_toBottomOf="@+id/homeNotification" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNearLocation1"
        android:layout_width="257dp"
        android:layout_height="286dp"
        android:layout_marginStart="-85dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearLocationText">

        <ImageView
            android:id="@+id/cardImageNearLoaction1"
            android:layout_width="257dp"
            android:layout_height="182dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cinnamon_lakeside"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="322dp" />


        <TextView
            android:id="@+id/nearLoactionName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="190dp"
            android:text="Cinnamon Lakeside"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ratingCinnomen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="190dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/ratingNumCinnomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="190dp"
            android:text="5.0"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nearLocation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="215dp"
            android:text="Fort, Colombo, Sri Lanka"
            android:textColor="#939393" />

        <TextView
            android:id="@+id/nearLoPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="255dp"
            android:text="LKR 15,000 "
            android:textColor="#067116"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nearLoMonthText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="255dp"
            android:text="/night"
            android:textColor="#939393" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/popularLoCardView1"
        android:layout_width="345dp"
        android:layout_height="108dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popularHotelText">

        <ImageView
            android:id="@+id/popCardImage1"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/angam_villas" />

        <TextView
            android:id="@+id/popCardPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="70dp"
            android:text="LKR 10,000"
            android:textColor="#067116"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popCardMonthText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="70dp"
            android:text="/night"
            android:textColor="#939393" />

        <TextView
            android:id="@+id/PopCardLocation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:text="Kotte, Colombo, Sri Lanka"
            android:textColor="#939393" />

        <TextView
            android:id="@+id/popCardRatingNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="12dp"
            android:text="5.0"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popHotelName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="14dp"
            android:text="Angam Villas"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/popCardRating1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_star" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/popularLoSeeAllText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="See all"
        android:textColor="#067116"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toEndOf="@+id/popularHotelText"
        app:layout_constraintTop_toBottomOf="@+id/cardViewNearLocation1" />

    <TextView
        android:id="@+id/popularHotelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Popular Hotel"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewNearLocation1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/homeNav"
        android:layout_width="430dp"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popularLoCardView1"
        app:layout_constraintVertical_bias="1.0">


        <ImageButton
            android:id="@+id/homeNaveHome"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_button3"
            app:srcCompat="@drawable/home_clicked" />

        <ImageButton
            android:id="@+id/homeNaveCalender"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_button2"
            app:srcCompat="@drawable/calender" />

        <ImageButton
            android:id="@+id/homeNaveSaved"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_button2"
            app:srcCompat="@drawable/saved" />

        <ImageButton
            android:id="@+id/homeNavProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_button2"
            app:srcCompat="@drawable/person" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    />


</androidx.constraintlayout.widget.ConstraintLayout>